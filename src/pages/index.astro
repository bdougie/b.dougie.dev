<style>
  main {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #ff4500;
    color: white;
    padding: 2rem;
    position: relative;
  }

  .container {
    text-align: center;
    margin-bottom: 4rem;
  }

  .avatar {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 2.5rem;
    margin: 1rem 0;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    margin-top: 1rem;
  }

  .social-link {
    color: white;
    transition: opacity 0.2s ease;
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .social-link:hover {
    opacity: 0.8;
  }

  .tooltip {
    position: absolute;
    top: -35px;
    left: 50%;
    transform: translateX(-50%) scale(0.95);
    background-color: hsl(0 0% 100% / 97%);
    color: hsl(240 10% 3.9%);
    font-size: 0.75rem;
    padding: 0.5rem 0.75rem;
    border-radius: 0.25rem;
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    transition: all 0.1s ease-in-out;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
    pointer-events: none;
    z-index: 50;
    font-weight: 500;
  }

  .tooltip::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 50%;
    transform: translateX(-50%) rotate(45deg);
    width: 8px;
    height: 8px;
    background-color: hsl(0 0% 100% / 97%);
  }

  .social-link:hover .tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) scale(1);
  }

  footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    text-align: center;
    background-color: #ff4500;
  }

  .footer-links {
    font-size: 1rem;
  }

  .footer-links a {
    color: white;
    text-decoration: none;
    transition: color 0.2s ease;
    padding: 0.5rem;
  }

  .footer-links a:hover {
    color: rgba(255, 255, 255, 0.6);
  }

  .separator {
    margin: 0 0.5rem;
    color: white;
    opacity: 0.8;
  }

  /* Dropdown styles */
  .dropdown {
    position: relative;
    display: inline-block;
  }

  .dropdown-trigger {
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    font-size: 1rem;
    padding: 0.5rem;
    text-decoration: none;
    transition: color 0.15s ease;
    font-family: inherit;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .dropdown-trigger:hover {
    color: rgba(255, 255, 255, 0.6);
  }

  .dropdown-content {
    display: block;
    opacity: 0;
    visibility: hidden;
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(5px);
    background-color: hsl(0 0% 100% / 97%);
    min-width: 8rem;
    white-space: nowrap;
    border-radius: 0.5rem;
    border: 1px solid hsl(240 3.7% 15.9%);
    padding: 0.5rem;
    margin-bottom: 0.5rem;
    box-shadow:
      0px 10px 38px -10px rgba(22, 23, 24, 0.35),
      0px 10px 20px -15px rgba(22, 23, 24, 0.2);
    transition: all 0.1s ease-in-out;
    z-index: 50;
  }

  .podcast-dropdown {
    min-width: 12rem;
  }

  .dropdown-content a {
    color: hsl(240 10% 3.9%);
    font-size: 0.875rem;
    padding: 0.5rem 0.75rem;
    border-radius: 0.25rem;
    text-decoration: none;
    display: block;
    text-align: left;
    line-height: 1.25rem;
  }

  .dropdown-content a:hover {
    background-color: hsl(240 5.9% 90%);
    color: hsl(240 10% 3.9%);
  }

  .dropdown-content.active {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .dropdown-content {
      background-color: hsl(240 10% 3.9%);
      border-color: hsl(240 3.7% 15.9%);
    }

    .dropdown-content a {
      color: hsl(0 0% 98%);
    }

    .dropdown-content a:hover {
      background-color: hsl(240 3.7% 15.9%);
      color: hsl(0 0% 98%);
    }

    .tooltip {
      background-color: hsl(240 10% 3.9%);
      color: hsl(0 0% 98%);
    }

    .tooltip::after {
      background-color: hsl(240 10% 3.9%);
    }
  }

  @media (max-width: 600px) {
    .dropdown-content {
      position: fixed;
      bottom: 6rem;
      left: 1rem;
      right: 1rem;
      width: auto;
      transform: translateY(5px);
    }

    .dropdown-content.active {
      transform: translateY(0);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const dropdownTriggers = document.querySelectorAll('.dropdown-trigger');

    dropdownTriggers.forEach((trigger) => {
      trigger.addEventListener('click', function (e) {
        e.preventDefault();
        const clickedDropdown = this.nextElementSibling;

        // Close all other dropdowns
        document.querySelectorAll('.dropdown-content').forEach((dropdown) => {
          if (dropdown !== clickedDropdown) {
            dropdown.classList.remove('active');
          }
        });

        // Toggle the clicked dropdown
        clickedDropdown.classList.toggle('active');
      });
    });

    // Close dropdowns when clicking outside
    document.addEventListener('click', function (e) {
      if (!e.target.matches('.dropdown-trigger') && !e.target.closest('.dropdown-content')) {
        document.querySelectorAll('.dropdown-content').forEach((dropdown) => {
          dropdown.classList.remove('active');
        });
      }
    });
  });
</script>
