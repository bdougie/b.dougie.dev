<style>
  main {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #ff4500;
    color: white;
    padding: 2rem;
    position: relative;
  }

  .container {
    text-align: center;
    margin-bottom: 4rem;
  }

  .avatar {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 2.5rem;
    margin: 1rem 0;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    margin-top: 1rem;
  }

  .social-links a {
    color: white;
    transition: opacity 0.2s ease;
  }

  .social-links a:hover {
    opacity: 0.8;
  }

  footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    text-align: center;
    background-color: #ff4500;
  }

  .footer-links {
    font-size: 1rem;
  }

  .footer-links a {
    color: white;
    text-decoration: none;
    transition: color 0.2s ease;
    padding: 0.5rem;
  }

  .footer-links a:hover {
    color: rgba(255, 255, 255, 0.6);
  }

  .separator {
    margin: 0 0.5rem;
    color: white;
    opacity: 0.8;
  }

  /* Dropdown styles */
  .dropdown {
    position: relative;
    display: inline-block;
  }

  .dropdown-trigger {
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    font-size: 1rem;
    padding: 0.5rem;
    text-decoration: none;
    transition: color 0.15s ease;
    font-family: inherit;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .dropdown-trigger:hover {
    color: rgba(255, 255, 255, 0.6);
  }

  .dropdown-content {
    display: block;
    opacity: 0;
    visibility: hidden;
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(5px);
    background-color: hsl(0 0% 100% / 97%);
    min-width: 8rem;
    border-radius: 0.5rem;
    border: 1px solid hsl(240 3.7% 15.9%);
    padding: 0.5rem;
    margin-bottom: 0.5rem;
    box-shadow: 0px 10px 38px -10px rgba(22, 23, 24, 0.35),
                0px 10px 20px -15px rgba(22, 23, 24, 0.2);
    transition: all 0.1s ease-in-out;
    z-index: 50;
  }

  .dropdown-content a {
    color: hsl(240 10% 3.9%);
    font-size: 0.875rem;
    padding: 0.5rem 0.75rem;
    border-radius: 0.25rem;
    text-decoration: none;
    display: block;
    text-align: left;
    line-height: 1.25rem;
  }

  .dropdown-content a:hover {
    background-color: hsl(240 5.9% 90%);
    color: hsl(240 10% 3.9%);
  }

  .dropdown-content.active {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .dropdown-content {
      background-color: hsl(240 10% 3.9%);
      border-color: hsl(240 3.7% 15.9%);
    }

    .dropdown-content a {
      color: hsl(0 0% 98%);
    }

    .dropdown-content a:hover {
      background-color: hsl(240 3.7% 15.9%);
      color: hsl(0 0% 98%);
    }
  }

  @media (max-width: 600px) {
    .dropdown-content {
      position: fixed;
      bottom: 6rem;
      left: 1rem;
      right: 1rem;
      width: auto;
      transform: translateY(5px);
    }
    
    .dropdown-content.active {
      transform: translateY(0);
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const dropdownTrigger = document.querySelector(".dropdown-trigger");
    const youtubeDropdown = document.getElementById("youtube-dropdown");
    
    // Toggle dropdown when clicking the trigger
    dropdownTrigger.addEventListener("click", function(e) {
      e.preventDefault();
      youtubeDropdown.classList.toggle("active");
    });
    
    // Close dropdown when clicking outside
    document.addEventListener("click", function(e) {
      if (!e.target.matches('.dropdown-trigger') && !e.target.closest('.dropdown-content')) {
        youtubeDropdown.classList.remove("active");
      }
    });
  });
</script>