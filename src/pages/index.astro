</Layout>

<style>
  main {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #ff4500;
    color: white;
    padding: 2rem;
    position: relative;
  }

  .container {
    text-align: center;
    margin-bottom: 4rem;
  }

  .avatar {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 2.5rem;
    margin: 1rem 0;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    margin-top: 1rem;
  }

  .social-links a {
    color: white;
    transition: opacity 0.2s ease;
  }

  .social-links a:hover {
    opacity: 0.8;
  }

  footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    text-align: center;
    background-color: #ff4500;
  }

  .footer-links {
    font-size: 1rem;
  }

  .footer-links a {
    color: white;
    text-decoration: none;
    transition: color 0.2s ease;
    padding: 0.5rem;
  }

  .footer-links a:hover {
    color: rgba(255, 255, 255, 0.6);
  }

  .separator {
    margin: 0 0.5rem;
    color: white;
    opacity: 0.8;
  }
</style>